{
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    { "src": "/(.*)", "dest": "/api/index.php" },
    { "src": "/config/db.php", "dest": "/api/config/db.php" },
    { "src": "/img/(.*)", "dest": "/api/img/$1" },
    { "src": "/includes/(.*)", "dest": "/api/includes/$1" }
  ]
}
