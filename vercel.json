{
  "builds": [
    { "src": "/api/index.php", "use": "vercel-php@0.6.0" },
    { "src": "/api/public/**", "use": "@vercel/static-build", "config": { "distDir": "public" } }
  ],
  "routes": [
    {
      "src": "/(css|js|img)/(.*)",
      "dest": "public/$1/$2"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}
